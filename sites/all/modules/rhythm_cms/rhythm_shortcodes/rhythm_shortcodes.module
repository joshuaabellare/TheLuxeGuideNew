/**
 * Implementation of hook_menu().
 */
function rhythm_shortcodes_menu() {
  variable_set('nd_visualshortcodes_extra_css', drupal_get_path('module', 'rhythm_shortcodes') . '/css/rhythm_shortcodes.css');
  $items = array();
  $items['admin/ajax/rhythm_shortcodes/icons_autocomplete'] = array(
    'page callback' => 'rhythm_shortcodes_ajax_icons_autocomplete',
    'access arguments' => array('administer nd visualshortcodes'),
    'type' => MENU_CALLBACK,
  );
  return $items;
}


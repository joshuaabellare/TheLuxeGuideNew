        $text = '<div class="' . $attrs['type'] . '-descr ' . $align . '">' . $text . '</div>';
      }
      $attrs['class'] .= ' align-center';
  }
  $text = '<div ' . _rhythm_shortcodes_shortcode_attributes($attrs) . '>' . $text . '</div>';
  return $text;
}

